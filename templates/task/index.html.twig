{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
    <h1>Task index</h1>
    <a href="{{ path('task_index') }}">lien vers task</a>
    <br>
    <br>
    <a href="{{ path('priority_index') }}">lien vers priority</a>
    <br>
    <br>
    <a href="{{ path('image_index') }}">lien vers image</a>
    <br>
    <br>
    <a href="{{ path('category_index') }}">lien vers category</a>
    <br>
    <br>
    <a href="{{ path('tasklist_index') }}">lien vers tasklist</a>
    <br>
    <br>
    <a href="{{ path('listitem_index') }}">lien vers listitem</a>
    <br>
    <br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Done</th>
                <th>Images</th>
                <th>Priority</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.name }}</td>
                <td>{{ task.done ? 'Yes' : 'No' }}</td>
                <td>{% if task.image %}

                    <img src="{{ asset(task.image.imgPath) }}" width="200px" />
                    {% endif %}</td>
                <td>{{ task.priority.name }}</td>

                <td>{% for category in task.categories %}
                        {{ category }}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('task_show', {'id': task.id}) }}">show</a>
                    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('task_new') }}">Create new</a>
{% endblock %}
